[mysql]
prompt="(\\u:hostname:\D)[\\d]> "
pager="less -i -n -S"
tee="/var/lib/mysql/query.log"
no-auto-rehash
[mysqld]
#innodb_force_recovery = 6
#innodb_force_recovery = 6
#innodb_purge_thread=0
# Remove leading # and set to the amount of RAM for the most important data
# cache in MySQL. Start at 70% of total RAM for dedicated server, else 10%.
# innodb_buffer_pool_size = 128M

# Remove leading # to turn on a very important data integrity option: logging
# changes to the binary log between backups.
# log_bin

# These are commonly set, remove the # and set as required.
# basedir = .....
# datadir = .....
# port = .....
# server_id = .....
# socket = .....

# Remove leading # to set options mainly useful for reporting servers.
# The server defaults are faster for transactions and fast SELECTs.
# Adjust sizes as needed, experiment to find the optimal values.
# join_buffer_size = 128M
# sort_buffer_size = 2M
# read_rnd_buffer_size = 2M 

sql_mode=NO_ENGINE_SUBSTITUTION,STRICT_TRANS_TABLES 

#misc
user = mysql
datadir = /var/lib/mysql
basedir = /usr/
port = 3306
socket = /var/lib/mysql/mysql.sock
max_allowed_packet = 32M
ft_min_word_len = 4
event_scheduler = 1
character_set_server=utf8

#performance
net_read_timeout = 60
open_files_limit = 8192
back_log = 150
#skip-networking
#XXX max_connections = 350
max_connections = 1000
max_connect_errors = 100000
external-locking = FALSE
binlog_cache_size = 4M 
#max_binlog_cache_size = 2G
performance_schema = 1
timed_mutexes = 1
#locked_in_memory = 1

#logs
log-output=file
slow_query_log = 1
slow_query_log_file = /var/lib/mysql/slow.log
log-error = /var/lib/mysql/error.log
log_warnings = 2
pid-file = /var/lib/mysql/mysql.pid
long_query_time = 1
log-slow-admin-statements = 1
log-queries-not-using-indexes = 1
log-slow-slave-statements = 1

#buffers & cache
#XXX table_cache = 256
table_open_cache = 256
max_heap_table_size = 64M
sort_buffer_size = 2M
join_buffer_size = 2M
thread_cache_size = 256
query_cache_size = 8M
query_cache_limit = 256K
query_cache_min_res_unit = 512
thread_stack = 192K
tmp_table_size = 64M
key_buffer_size = 8M
read_buffer_size = 1M
read_rnd_buffer_size = 16M
bulk_insert_buffer_size = 64M

#myisam
myisam_sort_buffer_size = 128M
myisam_max_sort_file_size = 1G
myisam_repair_threads = 1
myisam_recover

#replicate
server-id=1
log-slave-updates  = 1
expire_logs_days = 5
max_binlog_size = 1G
#log-bin = /var/lib/mysql/binlog/binlog
#log-bin-index = /var/lib/mysql/binlog/binlog.index
relay-log = /var/lib/mysql/relay/relay
relay-log-index = /var/lib/mysql/relay/relay.index
relay-log-purge = 1
sync_binlog = 0
innodb-support-xa = 0
#binlog_format = MIXED
slave_compressed_protocol = 1
slave_transaction_retries = 10
#binlog-ignore-db = mysql
#replicate-ignore-db = mysql
#slave-skip-errors = 1062,1053

#innodb
innodb_file_format = Barracuda
innodb_autoinc_lock_mode = 1
innodb_additional_mem_pool_size = 16M
innodb_buffer_pool_size = 20G
#XXX innodb_data_file_path = ibdata1:1G:autoextend
innodb_data_file_path = ibdata1:76M:autoextend
innodb_file_io_threads = 4
innodb_thread_concurrency = 20
innodb_flush_log_at_trx_commit = 1
innodb_log_buffer_size = 16M
innodb_log_file_size = 256M
innodb_log_files_in_group = 2
innodb_max_dirty_pages_pct = 50
innodb_lock_wait_timeout = 120
innodb_file_per_table = 1
innodb_rollback_on_timeout
innodb_status_file = 1
innodb_read_io_threads = 8
innodb_write_io_threads = 8
innodb_io_capacity = 2000
innodb_adaptive_flushing = 1
transaction_isolation = READ-COMMITTED 
innodb_flush_method = O_DIRECT
innodb_adaptive_hash_index_partitions = 8
#XXX  innodb_buffer_pool_restore_at_startup = 10
#XXX  innodb_dict_size_limit = 600M
#XXX  innodb_lazy_drop_table = 1
innodb_old_blocks_pct = 20
#XXX innodb_recovery_stats = 1
#innodb_purge_batch_size
#innodb_purge_threads

#others
#exit-info

[mysqldump]
quick
max_allowed_packet = 32M

